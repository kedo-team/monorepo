{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "preserve",
    "target": "ES2020",
    "moduleResolution": "Node",
    "module": "ES2020",
    "typeRoots": ["./src/@types"],
    "types":["@peeky/test"],
    "esModuleInterop": true, // Necessary for 'expect' typing to work
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "app/*": [
        "*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "layouts/*": [
        "src/layouts/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
      "boot/*": [
        "src/boot/*"
      ],
      "stores/*": [
        "src/stores/*"
      ],
      "graphql/*": [
        "src/data-providers/graphql/*"
      ],
      "view-model": [
        "src/view-model/*"
      ]
    }
  },
  "references": [
    { "path": "../data-model" }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}